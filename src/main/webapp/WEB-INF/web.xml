<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         version="2.5">
  <servlet>
    <servlet-name>HelloAppEngine</servlet-name>
    <servlet-class>com.unice.fr.HelloAppEngine</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ArticlesService</servlet-name>
    <servlet-class>com.unice.fr.routes.ArticlesService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SlowRoute</servlet-name>
    <servlet-class>com.unice.fr.routes.SlowRoute</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PushArticleService</servlet-name>
    <servlet-class>com.unice.fr.routes.PushArticleService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PushArticleHandler</servlet-name>
    <servlet-class>com.unice.fr.routes.PushArticleHandler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloAppEngine</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ArticlesService</servlet-name>
    <url-pattern>/articles/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SlowRoute</servlet-name>
    <url-pattern>/slow/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PushArticleService</servlet-name>
    <url-pattern>/push/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PushArticleHandler</servlet-name>
    <url-pattern>/push/handler/</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
